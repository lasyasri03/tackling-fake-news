{
  "name": "tackling-fake-news",
  "version": "1.0.0",
  "description": "AI-powered fake news detection system with newspaper dataset analysis",
  "main": "backend/server.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && node server.js",
    "client": "cd frontend && npm start",
    "server-only": "cd backend && node server.js",
    "client-only": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "fake-news",
    "detection",
    "news-analysis",
    "fact-checking",
    "dataset"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/tackling-fake-news.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
